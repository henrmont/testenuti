<!-- The Modal -->
<div class="modal fade" id="newAirplane">
    {{ form_start(newAirplaneForm) }}
    <div class="modal-dialog">
        <div class="modal-content modal-lg">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Nova Aeronave</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                {{ form_row(newAirplaneForm.name) }}
                <div class="form-group">
                <label for="cities">Selecione a cidade:</label>
                <select class="form-control" id="cities" name="newAirplaneCities">
                    {% for item in cities %}
                        <option value="{{ item.id }}">{{ item.name }}</option>
                    {% endfor %}
                </select>
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Registrar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
    {{ form_end(newAirplaneForm) }}
</div>