<!-- The Modal -->
<div class="modal fade" id="newVoo">
    {{ form_start(newVooForm) }}
    <div class="modal-dialog">
        <div class="modal-content modal-lg">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Nova Cidade</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group">
                    <label for="vooCityFrom">Selecione a cidade de origem:</label>
                    <select class="form-control" id="vooCityFrom" name="newVooCityFrom">
                        {% for item in cities %}
                            <option value="{{ item.id }}">{{ item.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="vooCityTo">Selecione a cidade de destino:</label>
                    <select class="form-control" id="vooCityTo" name="newVooCityTo">
                    </select>
                </div>
                <div class="form-group">
                    <label for="vooAirplane">Selecione a aeronave:</label>
                    <select class="form-control" id="vooAirplane" name="newVooAirplane">
                    </select>
                </div>
                {{ form_row(newVooForm.departure) }}
                {{ form_row(newVooForm.time) }}
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Registrar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
    {{ form_end(newVooForm) }}
</div>